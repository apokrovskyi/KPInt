<UserControl x:Class="KPInt.Controls.ColorSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KPInt.Controls"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Rectangle x:Name="ColorPreviewRectangle" Width="30" Height="30" Margin="10 10 10 10" VerticalAlignment="Center" />
                <StackPanel Orientation="Vertical">
                    <local:ByteValueSlider x:Name="RValue" Text="R"/>
                    <local:ByteValueSlider x:Name="GValue" Text="G" Margin="0 5 0 5"/>
                    <local:ByteValueSlider x:Name="BValue" Text="B"/>
                    <local:ByteValueSlider x:Name="TValue" Text="Wdth" Margin="0 5 0 0"/>
                </StackPanel>
            </StackPanel>
            <Button x:Name="SaveButton" Content="Save" Width="50"/>
        </StackPanel>
    </Grid>
</UserControl>
