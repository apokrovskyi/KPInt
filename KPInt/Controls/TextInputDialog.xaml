<Window x:Class="KPInt.Controls.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TextInputDialog" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" Margin="10 10 10 10">
        <DockPanel LastChildFill="True" Margin="0 10 0 10">
            <TextBox x:Name="PasswordTextBox" Width="120" DockPanel.Dock="Right"/>
            <Label Content="Password"/>
        </DockPanel>
        <Button x:Name="SubmitButton" Content="Submit" HorizontalAlignment="Center" Padding="10 0 10 0"/>
    </StackPanel>
</Window>
